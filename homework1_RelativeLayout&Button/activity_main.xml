<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/PageBackgroundColor"
    android:paddingLeft="@dimen/PagePadding"
    android:paddingRight="@dimen/PagePadding">

<!--    字串顯示-->
    <TextView
        android:id="@+id/showText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn8"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/ShowTextMargin"
        android:textSize="@dimen/ShowTextSize"
        android:text="@string/initShowText"
        android:textColor="@color/initShowTextColor" />

    <!--789 以8為畫面中心對齊-->
    <!--    7 "8"左偏30dp 垂直置中-->
    <Button
        android:id="@+id/btn7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/BtttonMarginW"
        android:layout_toStartOf="@id/btn8"
        android:backgroundTint="@color/normalColorButton1"
        android:onClick="ClickNumberBtn"
        android:text="@string/btn7"
        android:textColor="@color/normalColorButtonText" />
    <!--    8-->
    <Button
        android:id="@+id/btn8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:backgroundTint="@color/normalColorButton1"
        android:onClick="ClickNumberBtn"
        android:text="@string/btn8"
        android:textColor="@color/normalColorButtonText" />
    <!--    9 "8"右偏30dp 垂直置中-->
    <Button
        android:id="@+id/btn9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/BtttonMarginW"
        android:layout_toEndOf="@id/btn8"
        android:backgroundTint="@color/normalColorButton1"
        android:onClick="ClickNumberBtn"
        android:text="@string/btn9"
        android:textColor="@color/normalColorButtonText" />

    <!--456 "8"下偏20-->
    <!--    4 "5"左偏30dp-->
    <Button
        android:id="@+id/btn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn8"
        android:layout_marginTop="@dimen/BtttonMarginH"
        android:layout_marginEnd="@dimen/BtttonMarginW"
        android:layout_toStartOf="@id/btn5"
        android:backgroundTint="@color/normalColorButton2"
        android:onClick="ClickNumberBtn"
        android:text="@string/btn4"
        android:textColor="@color/normalColorButtonText" />
    <!--    5 水平置中-->
    <Button
        android:id="@+id/btn5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/BtttonMarginH"
        android:backgroundTint="@color/normalColorButton2"
        android:onClick="ClickNumberBtn"
        android:text="@string/btn5"
        android:textColor="@color/normalColorButtonText" />
    <!--    6 "5"右偏30dp-->
    <Button
        android:id="@+id/btn6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn8"
        android:layout_marginStart="@dimen/BtttonMarginW"
        android:layout_marginTop="@dimen/BtttonMarginH"
        android:layout_toEndOf="@id/btn5"
        android:backgroundTint="@color/normalColorButton2"
        android:onClick="ClickNumberBtn"
        android:text="@string/btn6"
        android:textColor="@color/normalColorButtonText" />

    <!--123 "5"下偏20-->
    <!--    1 "2"左偏30dp-->
    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn5"
        android:layout_marginTop="@dimen/BtttonMarginH"
        android:layout_marginEnd="@dimen/BtttonMarginW"
        android:layout_toStartOf="@id/btn2"
        android:backgroundTint="@color/normalColorButton3"
        android:onClick="ClickNumberBtn"
        android:text="@string/btn1"
        android:textColor="@color/normalColorButtonText" />
    <!--    2 水平置中-->
    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/BtttonMarginH"
        android:backgroundTint="@color/normalColorButton3"
        android:onClick="ClickNumberBtn"
        android:text="@string/btn2"
        android:textColor="@color/normalColorButtonText" />
    <!--    3 "2"右偏30dp-->
    <Button
        android:id="@+id/btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn5"
        android:layout_marginStart="@dimen/BtttonMarginW"
        android:layout_marginTop="@dimen/BtttonMarginH"
        android:layout_toEndOf="@id/btn2"
        android:backgroundTint="@color/normalColorButton3"
        android:onClick="ClickNumberBtn"
        android:text="@string/btn3"
        android:textColor="@color/normalColorButtonText" />

    <!--000 "2"下偏20-->
    <!--    特殊字串 "0"左偏30dp-->
    <Button
        android:id="@+id/btnSpecialLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn2"
        android:layout_marginTop="@dimen/BtttonMarginH"
        android:layout_marginEnd="@dimen/BtttonMarginW"
        android:layout_toStartOf="@id/btn0"
        android:backgroundTint="@color/normalColorButton4"
        android:onClick="ClickLeftBtn"
        android:text="@string/btnSpecialLeft"
        android:textColor="@color/normalColorButtonText" />
    <!--    0 水平置中-->
    <Button
        android:id="@+id/btn0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/normalColorButton4"
        android:onClick="ClickNumberBtn"
        android:text="@string/btn0"
        android:textColor="@color/normalColorButtonText" />
    <!--    清空 "0"右偏30dp-->
    <Button
        android:id="@+id/btnSpecialRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn2"
        android:layout_marginStart="@dimen/BtttonMarginW"
        android:layout_marginTop="@dimen/BtttonMarginH"
        android:layout_toEndOf="@id/btn0"
        android:backgroundTint="@color/normalColorButton4"
        android:onClick="ClickRightBtn"
        android:text="@string/btnSpecialRight"
        android:textColor="@color/normalColorButtonText" />

</RelativeLayout>